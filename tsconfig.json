{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["vite/client"],
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* Bundler mode */
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,

    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/renderer/src/ui/components/*"],
      "@buttons/*": ["src/renderer/src/ui/components/buttons/*"],
      "@containers/*": ["src/renderer/src/ui/containers/*"],
      "@layers/*": ["src/renderer/src/ui/layers/*"],
      "@assets/*": ["src/renderer/src/assets/*"],
      "@libs/*": ["src/renderer/src/libs/*"],
      "@constants/*": ["src/renderer/src/utils/constants/*"],
      "@helpers/*": ["src/renderer/src/utils/helpers/*"],
      "@models/*": ["src/renderer/src/ui/containers/modals/*"],
      "toSvg/*": ["src/renderer/src/assets/svg/*"],
      "toPng/*": ["src/renderer/src/assets/pictures/*"],
      "@api/*": ["src/renderer/src/services/api/*"],
      "@colors": ["src/renderer/src/assets/styles/color.ts"],
      "@services/*": ["src/renderer/src/services/*"],
      "@stores/*": ["src/renderer/src/services/zustand/*"]
    }
  },
  "include": ["src", "electron", "@types"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
